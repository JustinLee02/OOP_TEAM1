<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SignupFragment">

    <androidx.appcompat.widget.Toolbar
        android:id = "@+id/signuptoolbar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#40368A"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@id/frameLayout5">

        <TextView
            android:id="@+id/signupText"
            android:layout_width="106dp"
            android:layout_height="29dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="155dp"
            app:layout_constraintTop_toTopOf="@id/signuptoolbar"
            app:layout_constraintStart_toStartOf="@id/signuptoolbar"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/nametext"
        android:layout_width="58dp"
        android:layout_height="29dp"
        android:layout_marginTop="37dp"
        android:layout_marginStart="29dp"
        app:layout_constraintTop_toBottomOf="@id/signuptoolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/nametextfield"
        android:layout_width="364dp"
        android:layout_height="45dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/nametext"
        app:layout_constraintStart_toStartOf="@id/nametext"
        android:background="@drawable/rounded_all_corners_login"
        android:paddingStart="15dp"
        android:privateImeOptions="defaultInputmode=korean"
    />

    <TextView
        android:id="@+id/studentidtext"
        android:layout_width="85dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/nametextfield"
        app:layout_constraintStart_toStartOf="@id/nametextfield"
        android:text="학번/교번"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/studentidtextfield"
        android:layout_width="364dp"
        android:layout_height="45dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/studentidtext"
        app:layout_constraintStart_toStartOf="@id/studentidtext"
        android:background="@drawable/rounded_all_corners_login"
        android:paddingStart="15dp"
        />

    <TextView
        android:id="@+id/passwordtext"
        android:layout_width="85dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/studentidtextfield"
        app:layout_constraintStart_toStartOf="@id/studentidtextfield"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/passwordtextfield"
        android:layout_width="364dp"
        android:layout_height="45dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/passwordtext"
        app:layout_constraintStart_toStartOf="@id/passwordtext"
        android:background="@drawable/rounded_all_corners_login"
        android:paddingStart="15dp"
        />

    <TextView
        android:id="@+id/phonenumtext"
        android:layout_width="85dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/passwordtextfield"
        app:layout_constraintStart_toStartOf="@id/passwordtextfield"
        android:text="연락처"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/phonenumtextfield"
        android:layout_width="364dp"
        android:layout_height="45dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/phonenumtext"
        app:layout_constraintStart_toStartOf="@id/phonenumtext"
        android:background="@drawable/rounded_all_corners_login"
        android:paddingStart="15dp"
        />

    <TextView
        android:id="@+id/emailtext"
        android:layout_width="85dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/phonenumtextfield"
        app:layout_constraintStart_toStartOf="@id/phonenumtextfield"
        android:text="e-mail"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/emailtextfield"
        android:layout_width="364dp"
        android:layout_height="45dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/emailtext"
        app:layout_constraintStart_toStartOf="@id/emailtext"
        android:background="@drawable/rounded_all_corners_login"
        android:paddingStart="15dp"
        />

    <TextView
        android:id="@+id/carnumtext"
        android:layout_width="85dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/emailtextfield"
        app:layout_constraintStart_toStartOf="@id/emailtextfield"
        android:text="차량번호"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/carnumtextfield"
        android:layout_width="364dp"
        android:layout_height="45dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/carnumtext"
        app:layout_constraintStart_toStartOf="@id/carnumtext"
        android:background="@drawable/rounded_all_corners_login"
        android:paddingStart="15dp"
        android:privateImeOptions="defaultInputmode=korean"
        />

    <android.widget.Button
        android:id="@+id/signupbuttonfinal"
        android:layout_width="364dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/carnumtextfield"
        app:layout_constraintStart_toStartOf="@id/carnumtextfield"
        android:background="@drawable/signupbutton"
        android:text="회원가입"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>