<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_toast"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/rounded_all_corners"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <ImageView
        android:id="@+id/imageview_kaulogo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/kau_logo"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/view_toast"
        app:layout_constraintStart_toStartOf="@id/view_toast"
        />

    <TextView
        android:id="@+id/textview_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_toast"
        app:layout_constraintBottom_toBottomOf="@id/view_toast"
        app:layout_constraintStart_toEndOf="@id/imageview_kaulogo"
        app:layout_constraintEnd_toEndOf="@id/view_toast"
        android:text="Custom Toast View"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="italic"
        />



</androidx.constraintlayout.widget.ConstraintLayout>