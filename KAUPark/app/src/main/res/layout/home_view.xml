<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeView">

        <androidx.appcompat.widget.Toolbar
            android:id = "@+id/hometoolbar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="#40368A"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="@id/frameLayout2"
            >
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@id/hometoolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomtabbar"
            android:fillViewport="true"
            android:scrollbars="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/secondconst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toTopOf="@+id/scrollview"
                    app:layout_constraintStart_toStartOf="@id/scrollview"

                    >
                        <TextView
                            android:id = "@+id/myInfo"
                            android:layout_width="61dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="31dp"
                            android:layout_marginStart="18dp"
                            app:layout_constraintTop_toTopOf="@id/secondconst"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="내 정보"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            />

                        <View
                            android:id = "@+id/userview"
                            android:layout_width="277dp"
                            android:layout_height="84dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginStart="0dp"
                            app:layout_constraintStart_toStartOf="@id/myInfo"
                            app:layout_constraintTop_toBottomOf="@id/myInfo"
                            android:background="@drawable/rounded_all_corners"
                            />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id = "@+id/userimage"
                            android:layout_height="60dp"
                            android:layout_width="60dp"
                            android:layout_marginStart="23dp"
                            android:layout_marginTop="0dp"
                            app:layout_constraintTop_toTopOf="@id/userview"
                            app:layout_constraintStart_toEndOf="@id/userview"
                            android:src="@drawable/user"
                            />

                        <android.widget.Button
                            android:layout_width="80dp"
                            android:layout_height="18dp"
                            android:id = "@+id/manageprofile"
                            android:layout_marginTop="6dp"
                            android:layout_marginStart="-10dp"
                            app:layout_constraintTop_toBottomOf="@id/userimage"
                            app:layout_constraintStart_toStartOf="@id/userimage"
                            android:text="프로필 편집"
                            android:textSize="7dp"
                            android:textColor="@color/black"
                            android:background="@drawable/rounded_all_corners"
                            />

                        <TextView
                            android:id = "@+id/maptextview"
                            android:layout_width="44dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginStart="0dp"
                            app:layout_constraintStart_toStartOf="@id/userview"
                            app:layout_constraintTop_toBottomOf="@id/userview"
                            android:text="지도"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            />

                        <androidx.fragment.app.FragmentContainerView
                            android:id = "@+id/mapimage"
                            android:layout_width="370dp"
                            android:layout_height="337dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginStart="0dp"
                            app:layout_constraintTop_toBottomOf="@id/maptextview"
                            app:layout_constraintStart_toStartOf="@id/maptextview"
                            android:name = "com.naver.maps.map.MapFragment" />

                        <android.widget.Button
                            android:id="@+id/inbutton"
                            android:layout_width="173dp"
                            android:layout_height="90dp"
                            android:text="입차"
                            android:layout_marginTop="18dp"
                            android:layout_marginStart="0dp"
                            app:layout_constraintStart_toStartOf="@id/mapimage"
                            app:layout_constraintTop_toBottomOf="@id/mapimage"
                            />

                        <android.widget.Button
                            android:id="@+id/outbutton"
                            android:layout_width="173dp"
                            android:layout_height="90dp"
                            android:text="출차"
                            android:layout_marginTop="0dp"
                            android:layout_marginStart="24dp"
                            app:layout_constraintTop_toTopOf="@id/inbutton"
                            app:layout_constraintStart_toEndOf="@id/inbutton"
                            />

                        <View
                            android:id="@+id/feeview"
                            android:layout_width="370dp"
                            android:layout_height="78dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="0dp"
                            app:layout_constraintTop_toBottomOf="@id/inbutton"
                            app:layout_constraintStart_toStartOf="@id/inbutton"
                            android:background="@drawable/rounded_all_corners"
                            />

                        <View
                            android:id="@+id/scrolltest"
                            android:layout_width="370dp"
                            android:layout_height="78dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="0dp"
                                app:layout_constraintTop_toBottomOf="@id/feeview"
                                app:layout_constraintStart_toStartOf="@id/feeview"
                                android:background="@color/black"
                                />

                </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        
        <View
                android:id="@+id/bottomtabbar"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/kaucolor"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>