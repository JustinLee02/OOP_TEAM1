<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeView">

    <com.google.android.material.appbar.AppBarLayout
        android:id = "@+id/appbar"
        android:layout_width="412dp"
        android:layout_height="72dp"
        android:background="#40368A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id = "@+id/toolbar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#40368A">

            <TextView
                android:id="@+id/toobartext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "홈"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
            />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/myInfo"
        android:layout_width="61dp"
        android:layout_height="30dp"
        android:text="내 정보"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="18dp"
        android:layout_marginTop="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        />
    
    <View
        android:id = "@+id/carnumberview"
        android:layout_width="277dp"
        android:layout_height="84dp"
        android:layout_marginStart= "0dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@id/myInfo"
        app:layout_constraintTop_toBottomOf="@id/myInfo"
        android:background="@drawable/rounded_all_corners"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileimage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop= "0dp"
        android:layout_marginStart="23dp"
        app:layout_constraintTop_toTopOf="@id/carnumberview"
        app:layout_constraintStart_toEndOf="@id/carnumberview"
        android:src = "@drawable/img"
        />
    
    <Button
        android:layout_width="80dp"
        android:layout_height="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toBottomOf="@id/profileimage"
        app:layout_constraintStart_toEndOf="@id/carnumberview"
        android:text="프로필 편집"
        />





</androidx.constraintlayout.widget.ConstraintLayout>